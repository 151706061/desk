{
  "name"    : "desk Demo",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "desk.demo",
    "QOOXDOO_PATH" : "../../../../qooxdoo-2.0.1-sdk",
    "QXTHEME"      : "desk.demo.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  "config-warnings" : 
  {
    "job-shadowing" : ["libraries"]
  },

  "jobs" :
  {
   "build" :
    {
      "environment" : {
        "desk.extURL" : "http://vip.creatis.insa-lyon.fr:8080/visu/desk/trunk/ext/"
   //   "desk.extURL" : "/ext/"
      }
    },
    "source-hybrid" :
    {
      "environment" : {
        "desk.extURL" : "http://vip.creatis.insa-lyon.fr:8080/visu/desk/trunk/ext/"
  //     "desk.extURL" : "/ext/"
      }
    },

    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "../../Manifest.json"
        }
      ]
    }
  }
}
