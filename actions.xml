<actions>
<action name="ACVD" executable="/home/visu/src/vtkSurfaceBuild/bin/ACVD">
<description>generates a simplification of the input mesh</description>
<parameter name="input_file" type="file" required="true"/>
<parameter name="number_of_desired_vertices" type="int" min="0" required="true" />
<parameter name="gradation" type="float" required="true" min="0" max="30" default="0"/>
<anchor text="-d 0"/>
</action>

<action name="ACVDQ" executable="/home/visu/src/vtkSurfaceBuild/bin/ACVDQ">
<description>generates a simplification of the input mesh</description>
<parameter name="input_file" type="file" required="true"/>
<parameter name="number_of_desired_vertices" type="int" min="0" required="true" />
<parameter name="gradation" type="float" required="true" min="0" max="30" default="0" />
</action>

<action name="rgb2gray" executable="/home/visu/src/gcBuild/rgb2gray">
<description>generates a simplification of the input mesh</description>
<parameter name="input_file" type="file" required="true"/>
</action>

<action name="Extract_meshes" executable="/home/visu/src/vtkSurfaceBuild/bin/VolumeAnalysis">
<description>extract meshes from labeled volume data</description>
<parameter name="input_file" type="file" required="true"/>
<parameter name="max_number_of_vertices" type="int" min="0" default="10000" prefix="-n "/>
<parameter name="simlification_method" type="int" min="0" max="1" default="0" prefix="-s "/>
<parameter name="number_of_smoothing_steps" type="int" min="0" default="0" prefix="-sm "/>
</action>

<action name="Create_directory" executable="mkdir" void="true">
<description>create a directory</description>
<parameter name="directory_name" type="new_directory" required="true"/>
</action>

<action name="delete" executable="rm" void="true">
<description>delete a file or directory</description>
<parameter name="input_file" type="file" required="true"/>
</action>

<action name="mesh2vtk" executable="/home/visu/src/vtkSurfaceBuild/bin/mesh2vtk">
<description>converts a mesh to .vtk format</description>
<parameter name="input_file" type="file" required="true"/>
</action>

<action name="compress_to_zip" executable="zip">
<description>compress a file or directory to .zip archive</description>
<anchor text="-r backup.zip"/>
<parameter name="input_file" type="file" required="true"/>
</action>

<action name="Slice_Volume" executable="/home/visu/src/vtkSurfaceBuild/bin/VolumeSlice">
<description>Slice a volume image into 2D images</description>
<parameter name="input_file" type="file" required="true"/>
<parameter prefix="-f " name="format" type="int" min="0" max="1"/>
</action>

<action name="Volume_Median_Filtering" executable="/home/visu/src/vtkSurfaceBuild/bin/VolumeMedian">
<description>compute median filtering on input volume</description>
<parameter name="input_volume" type="file" required="true"/>
<parameter name="kernel_size" type="int" required="true" min="1"/>
</action>

<action name="Volume_Anisotropic_Diffusion" executable="/home/visu/src/vtkSurfaceBuild/bin/VolumeAnisotropicDiffusion">
<description>compute anisotropic diffusion on input volume</description>
<parameter name="input_volume" type="file" required="true"/>
<parameter name="number_of_iterations" type="int" required="true" min="1"/>
<parameter prefix="-t " name="diffusion_threshold" type="float"/>
<parameter prefix="-f " name="diffusion_factor" type="float"/>
</action>

<action name="sleep" executable="sleep" void="true">
<description>just sleep (usefull for debug)</description>
<parameter name="time_in_seconds" type="int" default="2" required="true"/>
</action>

<action name="saveXML" executable="echo" void="true">
<description>save an xml content to a file</description>
<parameter prefix="'" name="content" suffix="'" type="xmlcontent" required="true"/>
<parameter prefix=">>data/xml/" name="filename" type="string" required="true"/>
</action>



